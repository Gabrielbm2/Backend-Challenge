{
  "openapi": "3.0.0",
  "info": {
    "description": "Essa é uma API para criar, ler, atualizar e excluir artigos",
    "version": "1.0.0",
    "title": "Space Flight News",
    "termsOfService": "https://swagger.io/terms/",
    "contact": {
      "email": "gabribmeireles@hotmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "paths": {
    "/articles": {
      "get": {
        "tags": ["Articles"],
        "summary": "Lista de artigos",
        "description": "Retorna uma lista com todos os artigos cadastrados",
        "responses": {
          "200": {
            "description": "Operação bem sucedida",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ArticleOutput"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      },
      "post": {
        "tags": ["Articles"],
        "summary": "Criar um artigo",
        "description": "Cria um novo artigo",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ArticleInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Artigo criado com sucesso"
          },
          "400": {
            "description": "Entrada inválida"
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      }
    },
    "/articles/{id}": {
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "description": "ID do artigo",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        }
      ],
      "get": {
        "tags": ["Articles"],
        "summary": "Obter um artigo",
        "description": "Retorna as informações de um artigo específico",
        "responses": {
          "200": {
            "description": "Operação bem sucedida",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArticleOutput"
                }
              }
            }
          },
          "404": {
            "description": "Artigo não encontrado"
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      },
      "put": {
        "tags": ["Articles"],
        "summary": "Atualizar um artigo",
        "description": "Atualiza um artigo existente",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ArticleInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Artigo atualizado com sucesso"
          },
          "400": {
            "description": "Entrada inválida"
          },
          "404": {
            "description": "Artigo não encontrado"
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      },
      "delete": {
        "tags": ["Articles"],
        "summary": "Excluir um artigo",
        "description": "Exclui um artigo existente",
        "responses": {
          "200": {
            "description": "Artigo excluído com sucesso"
          },
          "404": {
            "description": "Artigo não encontrado"
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ArticleInput": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Título do artigo"
          },
          "content": {
            "type": "string",
            "description": "Conteúdo do artigo"
          }
        },
        "required": ["title", "content"]
      },
      "ArticleOutput": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "ID do artigo"
          },
          "title": {
            "type": "string",
            "description": "Título do artigo"
          },
          "content": {
            "type": "string",
            "description": "Conteúdo do artigo"
          }
        }
      }
    }
  }
}
